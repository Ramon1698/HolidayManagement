@model HolidayManagement.ViewModels.HolidayApplication.CreateHolidayApplicationViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <form asp-action="Create" data-ajax="true" data-ajax-update="#mainContainer">
        <div class="form-group">
            <label asp-for="Holidays" class="label-control"></label>
            @Html.DropDownListFor(holiday => holiday.HolidayId, new SelectList(Model.Holidays, "Id", "Type"),
                                  "Select holiday", new { @class = "form-control" })
            <span asp-validation-for="Holidays" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StartDay" class="label-control"></label>
            <input asp-for="StartDay" class="form-control" style="width: 60vw !important;" />
            <span asp-validation-for="StartDay" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="EndDay" class="label-control"></label>
            <input asp-for="EndDay" class="form-control" />
            <span asp-validation-for="EndDay" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Reasons" class="label-control"></label>
            <input asp-for="Reasons" class="form-control" style="height:300px;" />
            <span asp-validation-for="Reasons" class="text-danger"></span>
        </div>
        <input class="button-design form-control margin-top" type="submit" value="Create" />
    </form>
</div>