@model HolidayManagement.ViewModels.Employees.CreateEmployeeViewModel

<div class="row">
    <form asp-action="Create" data-ajax="true" data-ajax-update="#mainContainer">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="label-control"></label>
            <input asp-for="Name" class="form-control" style="width: 60vw !important;" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="label-control"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="label-control"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="label-control"></label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="label-control"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="HolidayDays" class="label-control"></label>
            <input asp-for="HolidayDays" class="form-control" />
            <span asp-validation-for="HolidayDays" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Role" class="label-control"></label>
            <select class="form-control" name="Role" asp-for="@Model.Role">
                <option>Operational</option>
                <option>HR</option>
                <option>Manager</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>
        <input class="button-design form-control margin-top" type="submit" value="Create" />
    </form>
</div>
