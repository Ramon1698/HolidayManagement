@model HolidayManagement.ViewModels.Employees.EditEmployeeViewModel

<div class="row">
    <form asp-action="Edit" data-ajax="true" data-ajax-update="#mainContainer">
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name" class="label-control"></label>
            <input asp-for="Name" class="form-control" style="width: 60vw !important;" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="label-control"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="label-control"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="HolidayDays" class="label-control"></label>
            <input asp-for="HolidayDays" class="form-control" />
            <span asp-validation-for="HolidayDays" class="text-danger"></span>
        </div>
        <input class="button-design form-control margin-top" type="submit" value="Update" />
    </form>
</div>
