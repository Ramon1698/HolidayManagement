@model HolidayManagement.ViewModels.Holidays.EditHolidayViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Type" class="label-control"></label>
            <input asp-for="Type" class="form-control" style="width: 60vw !important;" />
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Days" class="label-control"></label>
            <input asp-for="Days" class="form-control" />
            <span asp-validation-for="Days" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="label-control"></label>
            <input type="tel" asp-for="Description" class="form-control" style="height:300px; text-align: start;" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <input class="button-design form-control margin-top" type="submit" value="Update" />
    </form>
</div>

